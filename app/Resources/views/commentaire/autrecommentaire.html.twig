<table class="table">
  <div class="container">
    <thead>
        <tr>

        </tr>
    </thead>
    <tbody>
{% for avis in avis %}
<tr>
{% if avis.article == NULL %}

<td>Vous avez aimé le commentaire "{{avis.commentaire.commentaire}}" posté par {{avis.commentaire.utilisateur.username}} sur l'article <a href="{{ path('article_show', { 'id': avis.commentaire.article.id }) }}"> {{avis.commentaire.article.titre}} </a> </td>
{% endif %}
<tr>
{% endfor %}
    </tbody>
  </table>
</div>
</div>
</div>
