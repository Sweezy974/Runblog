{% trans_default_domain 'FOSUserBundle' %}


<style media="screen">
  label{
    color: transparent;

  }
</style>

<div class="form">

  <ul class="tab-group">
    <li class="tab"><a href="{{ path('fos_user_profile_show') }}">PROFIL</a></li>
    <li class="tab active"><a href="#signup">MODIFIER</a></li>
  </ul>

  <div class="tab-content">
    <div id="signup">


        {{ form_start(form, {'method': 'post', 'attr': {'class': 'fos_user_registration_register'}}) }}

      <div class="top-row">
        <div class="field-wrap form-group">
            {{ form_widget(form.nom, {'attr': {'placeholder':'Nom'}}) }}
          </div>
          <div class="field-wrap form-group">
            {{ form_widget(form.prenom, {'attr': {'placeholder':'Prenom'}}) }}
            </div>

              <div class="field-wrap form-group">
                <p style="color:white;">
                  choisissez un avatar : ( taille max de l'image: 2Mo )
                </p>
                  {{ form_widget(form.imageFile, {'attr': {'value':'{{ user.imageName }}'}}) }}
                </div>



        <div class="field-wrap form-group">
          {{ form_widget(form.username, {'attr': {'placeholder':'Pseudo'}}) }}
        </div>

        <div class="field-wrap form-group">
         {{ form_widget(form.email, {'attr': {'placeholder':'Email'}}) }}
        </div>

      <div class="field-wrap form-group">
        {{ form_widget(form.current_password, {'attr': {'placeholder':'Mot de passe'}}) }}
        {{ form_errors(form.current_password) }}
      </div>
      <div class="field-wrap form-group text-center">
      <a href="{{ path('fos_user_change_password') }}">Changer de mot de passe ?</a>
    </div>




      <button type="submit" class="button button-block"/>MODIFIER</button>
    </div>

      {{ form_end(form) }}

    </div>

    <div id="login">
      <h1>Welcome Back!</h1>

      <form action="/" method="post">

        <div class="field-wrap">
        <label>
          Email Address<span class="req">*</span>
        </label>
        <input type="email"required autocomplete="off"/>
      </div>

      <div class="field-wrap">
        <label>
          Password<span class="req">*</span>
        </label>
        <input type="password"required autocomplete="off"/>
      </div>

      <p class="forgot"><a href="#">Forgot Password?</a></p>

      <button class="button button-block"/>Log In</button>

      </form>

    </div>

  </div><!-- tab-content -->

</div> <!-- /form -->
