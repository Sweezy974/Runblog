{% trans_default_domain 'FOSUserBundle' %}

<style media="screen">
  li{
    color: red;
  }
</style>
<div class="form">
  {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
  <p class="col-md-12 text-center" style="color:white;">Oops ! je crois que vous êtes déjà inscrit(e) :3 !Souhaitez-vous retourner à l'<a href="{{ path('homepage') }}">accueil </a>? ou prenez le temps de lire l'un de<a href="{{ path('article_index') }}"> nos articles </a>? :) </p>
  {% else %}

  <ul class="tab-group">
    <li class="tab active"><a href="#signup">S'inscrire</a></li>
    <li class="tab"><a href="{{ path('fos_user_security_login') }}">Connexion</a></li>
  </ul>

  <div class="tab-content">
    <div id="signup">
      <h1>INSCRIPTION</h1>


        {{ form_start(form, {'method': 'post', 'attr': {'class': 'fos_user_registration_register'}}) }}

      <div class="top-row">
        <div class="field-wrap form-group">
            {{ form_widget(form.nom, {'attr': {'placeholder':'Nom'}}) }}
          </div>
          <div class="field-wrap form-group">
            {{ form_widget(form.prenom, {'attr': {'placeholder':'Prenom'}}) }}
            </div>
            <div class="field-wrap form-group">
            {{ form_widget(form.dateDeNaissance, {'attr': {'placeholder':'Date de Naissance'}}) }}
              </div>
              <div class="field-wrap form-group">
                <p style="color:white;">
                  choisissez un avatar : ( taille max de l'image: 2Mo )
                </p>
                  {{ form_widget(form.imageFile) }}
                </div>




        <div class="field-wrap form-group">
          {{ form_widget(form.username, {'attr': {'placeholder':'Pseudo'}}) }}
        </div>

        <div class="field-wrap form-group">
         {{ form_widget(form.email, {'attr': {'placeholder':'Email'}}) }}
        </div>

      <div class="field-wrap form-group">
        {{ form_widget(form.plainPassword.first, {'attr': {'placeholder':'Mot de passe'}}) }}
        {{ form_errors(form.plainPassword.first) }}
      </div>

      <div class="field-wrap form-group">
        {{ form_widget(form.plainPassword.second, {'attr': {'placeholder':'Vérification mot de passe'}}) }}
        {{ form_errors(form.plainPassword.second) }}
      </div>


      <button type="submit" class="button button-block"/>Envoyer</button>
    </div>

      {{ form_end(form) }}

    </div>

    <div id="login">
      <h1>Welcome Back!</h1>

      <form action="/" method="post">

        <div class="field-wrap">
        <label>
          Email Address<span class="req">*</span>
        </label>
        <input type="email"required autocomplete="off"/>
      </div>

      <div class="field-wrap">
        <label>
          Password<span class="req">*</span>
        </label>
        <input type="password"required autocomplete="off"/>
      </div>

      <p class="forgot"><a href="#">Forgot Password?</a></p>

      <button class="button button-block"/>Log In</button>
      {% endif %}

      </form>

    </div>

  </div><!-- tab-content -->

</div> <!-- /form -->
